{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2015", "es2016", "es2017", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "target": "esnext"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
